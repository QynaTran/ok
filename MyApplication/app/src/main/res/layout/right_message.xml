<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/message_layout"
    android:padding="10dp">

        <TextView
            android:id="@+id/message_text_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/right_bg"
            android:maxWidth="300dp"
            android:padding="10dp"
            android:text="This is messagefsdfsdfdsfsdfsdfsdfsdfsdfsdfsdfsdfsdfvvvvsdfsdfdsfdsfsdfdsfdfdsf"
            android:textColor="#ffff"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/message_seen_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/message_text_layout"
            android:layout_marginEnd="10dp"
            />
        <TextView
            android:id="@+id/message_time_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/message_text_layout"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="5dp"
            android:text="10:04"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/message_card"
            android:layout_width="300dp"
            android:layout_height="400dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardCornerRadius="20dp">
                <ImageView
                    android:id="@+id/message_image_layout"
                    android:layout_width="300dp"
                    android:layout_height="400dp"
                    android:scaleType="fitXY"/>
        </androidx.cardview.widget.CardView>




</androidx.constraintlayout.widget.ConstraintLayout>